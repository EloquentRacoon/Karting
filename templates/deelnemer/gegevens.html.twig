{% extends 'deelnemer.html.twig' %}
{% block menu %}
    <li><a href="{{ path('activiteiten') }}">home</a></li>
    <li class="active right"><a href="{{ path('gegevens') }}">gegevens</a></li>

{% endblock %}

{% block content %}
    <div class="container">
        <div  class="col-md-12 text-center mb-2">
            <a href="{{ path('reset_wachtwoord',{'id':user.id}) }}">
                <button class="btn btn-danger">reset wachtwoord</button>
            </a>
        </div>
    </div>
    <br>
    <table class="table" style="table-layout: fixed">
        <tr>
            <th>Naam</th>
            <th>Email</th>
            <th>Adres</th>
            <th>Postcode</th>
            <th>Woonplaats</th>
            <th>Telefoon nummer</th>
            <th>Actie</th>
        </tr>
        <tbody>
        <tr>
            <td class="align-middle">{{ user.voorletters|capitalize }} {{ user.tussenvoegsel }} {{ user.achternaam|capitalize }}</td>
            <td class="align-middle">{{ user.email }}</td>
            <td class="align-middle">{{ user.adres|capitalize }}</td>
            <td class="align-middle">{{ user.postcode }}</td>
            <td class="align-middle">{{ user.woonplaats }}</td>
            <td class="align-middle">{{ user.telefoon }}</td>
            <td>
                <a href="{{ path('edit_user',{'id':user.id}) }}">
                    <button class="btn btn-danger text-center">Edit</button>
                </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
