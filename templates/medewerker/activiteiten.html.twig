{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li class="nav-item active"><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li class="nav-item dropdown">
        <a class="dropdown-toggle" href="#" data-toggle="dropdown" >beheer</a>
        <ul class="dropdown-menu">
            <li><a class="nav-item dropdown-item" href="{{ path('beheer_activiteit') }}">beheer activiteiten</a></li>
            <li><a class="nav-item dropdown-item" href="{{ path('beheer_soortactiviteit') }}">beheer soortactiviteiten</a></li>
        </ul>
    </li>
    <li><a href="{{ path('deelnemer_overzicht') }}">deelnemers</a></li>

{% endblock %}
{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle activiteiten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>datum</td>
                <td>tijd</td>
                <td>soort activiteit</td>
                <td>deelnemers</td>
                <td>actie</td>
            </tr>
            </thead>
            <tbody>
            {% for activiteit in activiteiten %}
                <tr>
                    <td>
                        {{ activiteit.datum|date("d-m-Y")}}
                    </td>
                    <td>
                        {{ activiteit.tijd|date("H:i")}}
                    </td>

                    <td>
                        {{ activiteit.soortActiviteit.naam}}
                    </td>
                    <td>
                        {{ activiteit.users|length}}
                    </td>
                    <td title="deelnemers aan deze activiteit">

                        <a href="{{ path('details', {'id':activiteit.id}) }}" >
                            <span class="glyphicon glyphicon-search" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <br />
    </section>

{% endblock %}
